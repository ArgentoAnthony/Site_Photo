@model Site_Photo_DAL.Models.AddPhotoDTO

@{
    ViewData["Title"] = "AjoutPhoto";
}

<h1>AjoutPhoto</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form id="myDropzone" asp-action="AjoutPhoto" class="dropzone">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="dz-message">
                Faites glisser vos images ici ou cliquez pour sélectionner des fichiers à télécharger.
            </div>
            <div class="form-group">
                <label asp-for="Id_Category" class="control-label">Catégorie</label>
                <select asp-for="Id_Category" class="form-control">
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="Id_Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script>
    $(document).ready(function () {
        // Initialiser Dropzone.js sur le formulaire avec l'ID "myDropzone"
        Dropzone.options.myDropzone = {
            maxFilesize: null, // Taille maximale des fichiers en Mo
            maxFiles: 100, // Nombre maximal de fichiers pouvant être téléchargés
            acceptedFiles: 'image/*', // Types de fichiers acceptés (ici uniquement des images)
            init: function () {
                this.on('success', function (file, response) {
                    // Réagir au succès du téléversement
                    console.log('Téléversement réussi :', response);
                });
                this.on('error', function (file, errorMessage) {
                    // Réagir en cas d'erreur de téléversement
                    console.error('Erreur lors du téléversement :', errorMessage);
                });
            }
        };
    });
</script>